!!! 5
%html(lang="en")
  %head
    %title Readlet Mini
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    %meta(name="apple-mobile-web-app-capable" content="yes")
    %meta(name="apple-mobile-web-app-status-bar-style" content="black")
    %script(src="//use.typekit.net/huo5jmu.js")
    %script
      try{Typekit.load();}catch(e){}
    %link(rel="stylesheet" href="/stylesheets/readlet-mini.css")
  %body
    %script(type="template" id="home-template")
      %h1.logo-ish
        Readlet Mini
      %form
        %input.query(type="text" name="query" placeholder="Wikipedia Search" autocomplete="off")
        %button.submit-button(type="submit") Search
    %script(type="template" id="results-template")
      %header.screen-header
        %button.left.back-button
          ←
        %h1
      .content
        %ul.results-list
    %script(type="template" id="article-template")
      %header.screen-header
        %button.left.back-button
          ←
        %h1
      .content
        <% if (!_.isEmpty(attributes.text)) { %>
        <%= attributes.text %>
        <% } %>
    %script(type="template" id="results-entry-template")
      <li data-title="<%= attributes.title %>">
      <%= attributes.title %>
      </li>
    %script(src="/javascripts/readlet-mini.js")
